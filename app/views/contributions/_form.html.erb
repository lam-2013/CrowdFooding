<%= form_for(@contribution) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="field">
      <%= f.label :quota, placeholder:'in euro' %><br />
      <%= f.text_field :quota%>


      <%= f.label :servizio %><br />
      <%= f.text_field :servizio %>


      <%= f.label :numero %><br />
      <%= f.number_field :numero, :in => 1..200 %>


      <%= f.hidden_field :project_id, value: @project.id %>
      <div class="actions">
        <%= f.submit 'Crea contributo', class:'btn btn-large btn-success' %>
      </div>
    </div>

<% end %>

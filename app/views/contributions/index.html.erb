<h1>Elenco dei contributi</h1>

<table>
  <tr>
    <th>Quota</th>
    <th>Servizio</th>
    <th>Numero</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contributions.each do |contribution| %>
  <tr>
    <td><%= contribution.quota %></td>
    <td><%= contribution.servizio %></td>
    <td><%= contribution.numero %></td>

    <td><%= link_to 'Modifica', edit_contribution_path(contribution.id) %></td>
    <td><%= link_to 'Elimina', contribution, method: :delete, id:contribution.id, data: { confirm: 'Sei sicuro?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuovo Contributo', new_contribution_path(project_id:@project.id) %>

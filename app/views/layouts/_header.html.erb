<header class="navbar navbar-fixed-top ">
  <div class="navbar-inner">
    <div class="container-fluid">
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <!--<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"></a>-->
      <ul class="nav">
        <li><%= image_tag("loghi/ape_logo.png", :size => "45x45") %></li>
        <li><%= link_to "CrowdFooding", root_path, id: "logo" %></li>
      </ul>
      <div class="nav-collapse collapse">
        <nav>
          <ul class="nav pull-center">
            <li><%= image_tag("icone/binoculars2.png", :size => "30x30") %></li>
            <li><%= link_to "Scopri", scopri_path %></li>
            <% if signed_in? %>
                <li><%= image_tag("icone/bulb2.png", :size => "25x25", :options =>
                        {:style=>"padding-top: 10px;"}) %></li>
                <li><%= link_to "Crea", crea_path %></li>
            <% end %>
          </ul>
          <ul class="nav pull-right">
            <% #link_to is the Rails helper to create links (it generates <a...> tags) %>
            <% if signed_in? %>
                <li><%= link_to "Utenti", users_path %></li>
                <li id="fat-menu" class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Profilo", current_user %></li>
                    <li><%= link_to "Impostazioni", edit_user_path(current_user) %></li>
                    <li class="divider"></li>
                    <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
                  </ul>
                </li>


            <% else %>
                <li><%=link_to "Sign in", signin_path %></li>
            <% end %>
            <li><%= link_to "About",   about_path %></li>
            <li><%= link_to "Help", help_path %></li>
          </ul>
        </nav>
      </div>

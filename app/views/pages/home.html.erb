<% #Provide the page title in a symbol to application.html.erb to avoid duplication %>
<% provide :title, 'Home' %>
<div class="container-fluid">
  <% if signed_in? %>
      <div class="row-fluid">
        <aside class="span3">
          <section>
            <%= render 'shared/user_info' %>
            <%= link_to 'Il mio profilo', current_user, class: 'btn btn-large btn-info'%>
          </section>
          <section>
            <%= render 'shared/stats' %>
          </section>
        </aside>
        <section>
        <div class="span8">
            <h1> CrowdFooding</h1>
          <h2> Crowdfunding per rivalutare e promuovere la bontà e la genuinità della nostra terra </h2>
        </div>
        </section>
      </div>
  <% else %>
      <div class="center hero-unit" style="height: 250px" id="title">
        <h1>CrowdFooding</h1>
        <h2> Crowdfunding per rivalutare e promuovere la bontà e la genuinità della nostra terra </h2>
        <p><%= link_to 'Sign up now!', signup_path, class: 'btn btn-large btn-warning' %> </p>
        <p>  <%= link_to "Sign up with Twitter", signup_path(provider: 'twitter'), class: "btn btn-large btn-info" %>  </p>
        <p>  <%= link_to "Sign up with Facebook", signup_path(provider: 'facebook'), class: "btn btn-large btn-success" %>  </p>
      </div>
  <% end %>




  <div class="row-fluid center">

    <div class="row-fluid">
      <div class="span10 offset1">
        <h2><%= image_tag ("icone/champion-cup.png") %> Most Recently Successfully funded projects   </h2>

        <% @projectcat = 1 %>
        <% @projects_complete  %>
        <%= render 'shared/project_complete_slider' %>
      </div>
    </div>


    <div class="row-fluid">
      <div class="span10 offset1">
        <h2> Popular projects   </h2>
        <% @projectcat = 2 %>
        <% @projects_in_corso  %>
        <%= render 'shared/project_in_corso_slider' %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span10 offset1">
        <h2> Last started Projects </h2>
        <% @projectcat = 3 %>
        <% @projects_recently  %>
        <%= render 'shared/project_recently_slider' %>
      </div>
    </div>


    <div class="row-fluid">
      <div class="span10 offset1">
        <h2> Friends Projects </h2>
        <% @projectcat = 4 %>
        <% @projects_friends  %>
        <% if signed_in? %>
            <% if !current_user.followers.nil? %>
                <%= render 'shared/project_friends_slider' %>
            <% end %>
        <% end %>
      </div>
    </div>

    <% if !signed_in? %>
        <div class="center hero-unit">
          <%= link_to 'Sign in!',  signin_path, class: 'btn btn-large btn-warning' %>
        </div>
    <% end %>


  </div>
</div>

</div>




<% #Provide the page title in a symbol to application.html.erb to avoid duplication %>
<% provide :title, 'Scopri i Progetti' %>
<div class="container-fluid">
  <div class="row-fluid">

    <aside class="span3">
      <%= render 'shared/user_info' %>
      <%= link_to 'Il mio profilo', current_user, class: 'btn btn-medium btn-info'%>
      <%= render 'shared/stats' %>
    </aside>

      <div class="span6 center">
        <%= image_tag ("icone/binoculars.png") %>
        <h1>Scopri nuovi Progetti</h1>
        <h3>Cerca i progetti </h3>
        <h5>in base al luogo, alla categoria o al titolo del progetto</h5>
        <%= render 'projects/search_projects_form' %>
      </div>

</div>

    <div class="row-fluid">
      <div class="span10 offset1">
        <h2><%= image_tag("icone/champion-cup.png")%> Progetti terminati con successo   </h2>
        
        <% @projectcat = 1 %>
        <% @projects_complete  %>
        <%= render 'shared/project_complete_slider' %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span10 offset1">
        <h2><%= image_tag("icone/star.png", :size => "50x50")%> Progetti pi√π popolari  </h2>
        <% @projectcat = 2 %>
        <% @projects_in_corso  %>
        <%= render 'shared/project_in_corso_slider' %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span10 offset1">
        <h2> <%= image_tag("icone/cronometer.png")%> Ultimi progetti creati </h2>
        <% @projectcat = 3 %>
        <% @projects_recently  %>
        <%= render 'shared/project_recently_slider' %>
      </div>
    </div>


  <div class="row-fluid">
    <div class="span10 offset1">
      <h2> <%= image_tag("icone/amici.jpg", :size => "60x60")%> Progetti degli amici </h2>
      <% @projectcat = 4 %>
      <% @projects_friends  %>
      <% if signed_in? %>
          <% if !current_user.followers.nil? %>
              <%= render 'shared/project_friends_slider' %>
          <% end %>
      <% end %>
    </div>
  </div>


</div>

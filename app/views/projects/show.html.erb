<% #Provide the page title in a symbol to application.html.erb to avoid duplication %>
<% provide :title, @project.titolo %>

<div class="container-fluid">
  <div class="row-fluid center">
    <h1>
      <%= @project.titolo %>
    </h1>
    <div class="span12">
      <% unless @project.img_copertina.blank? %>
          <%= image_tag(@project.img_copertina , :height => '100%', :width => '100%', :class => "img-rounded", :id => "copertina")%>
      <%else%>
          <img src="http://www.lettera43.it/upload/images/12_2012/l43-piantagione-121227075428_big.jpg" class="img-rounded" id="copertina">
      <% end %>
    </div>
  </div>


  <div class="row-fluid">
      <div class="span2" >
    <p>Budget attuale: <%= @project.budget_attuale %> € <p>
      </div>
    <div class="span8">
      <div class="progress progress-success progress-striped active">
        <%if (@project.budget_attuale * 100 / @project.goal > 100) %>
            <div class="bar" style="width: 100%;"></div>
        <% else %>
            <div class="bar" style="width: <%= @project.budget_attuale * 100 / @project.goal %>%;"></div>
        <% end %>
      </div>
    </div>
    <div class="span2">
      <p> Goal <%= @project.goal %> € <p>
    </div>

    <div class="row-fluid">
      <div class="span8">
      <% dif = distance_of_time_in_words(Time.now, @project.data_fine, include_seconds = true) %>
      <% dif.to_s
         if dif.include? 'day'
           dif.sub!('day','giorno')
         end
         if dif.include? 'giornos'
           dif.sub!('giornos','giorni')
         end
         if dif.include? 'about'
           dif.sub!('about','circa')
         end
         if dif.include? 'hour'
           dif.sub!('hour','ora')
         end
         if dif.include? 'oras'
           dif.sub!('oras','ore')
         end
         if dif.include? 'less than a minute'
           dif.sub!('less than a minute','meno di un minuto')
         end
         if dif.include? 'less than'
           dif.sub!('less than','meno di')
         end
         if dif.include? 'minute'
           dif.sub!('minute','minuto')
         end
         if dif.include? 'minutos'
           dif.sub!('minutos','minuti')
         end
         if dif.include? 'year'
           dif.sub!('year','anno')
         end
         if dif.include? 'annos'
           dif.sub!('annos','anni')
         end
         if dif.include? 'month'
           dif.sub!('month','mese')
         end
         if dif.include? 'meses'
           dif.sub!('meses','mesi')
         end
         if dif.include? 'half a'
           dif.sub!('half a','mezzo')
         end%>

        <div class="progress progress-danger progress-striped active">
          <% ore_rimanenti = ((@project.data_fine- Time.zone.now)/1.hours).to_i %>
          <div class="bar" style="width: <%= 100-ore_rimanenti * 100 / 672 %>%;"></div>
        </div>
      </div>

      <div class="span2">
      Hai ancora: <%= dif %>



       </div>
    </div>

      Budget attuale <%= @project.budget_attuale %>

        backes<%= @backer_numbers %>

        Data di creazione:
        <%= @project.data_fine.strftime("%d/%m/%Y %H:%M") %>


    </div>



  <div class="row-fluid">
    <div class="span8 offset2">

      <div class="span5 offset1">
        <h4>
          <%= @project.luogo %>
        </h4>
        <h4>
          <%=link_to @username, @user %>
        </h4>


        <h2>Descrizione</h2>
        <p>
          <%= @project.descrizione %>
        </p>
        <% if !current_user.nil? %>
            <% if current_user.id == @project.user.id %>
                |<%= link_to "Edit Project", edit_project_path%>
                |<%= link_to "Edit/Add Contributions", contributions_path(project_id: @project.id)%>
            <% end %>
        <% end %>



      </div>
      <div class="span5 offset1">

        <h4>Contributi: </h4>

        <%= render 'shared/project_contributions_show' %>


      </div>

    </div>

    <div class="row-fluid">
      <div class="span12 center">
        <section>
          <% p_url = "http://www.facebook.com/sharer.php?u=".concat request.url %>
          <%=link_to image_tag('loghi/FB_icon_share.png', :height => '50px', :width => '50px'),p_url %>
        </section>
      </div>


    </div>


  </div>

</div>

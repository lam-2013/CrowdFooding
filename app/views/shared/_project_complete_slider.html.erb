
<div id="myCarouseltab<%= @projectcat%>" class="carousel slide" data-interval="4000" data-pause="hover">
  <div class="carousel-inner" >
    <% if @projects_complete.any? %>
        <%  @projects_complete.each do |project|  %>
            <% if @projects_complete.first == project %>
                <div class="active item <%= project.id %>">
            <% else %>
                <div class="item <%= project.id %>">
            <% end %>

            <div class="carousel-cation">
              <ol class="projects">

                <div class="row-fluid" id="padre" >
                  <div class="row-fluid center" >
                  <h1><%=link_to project.titolo ,project%> </h1>
                  </div>

                  <div class="row-fluid">
                    <div class="span6 offset1" id="imgslider">
                      <% if project.img_copertina.nil?%>
                          <%=link_to image_tag("copertine_projects/ape_copertina.jpg", :size => "400x300", :class => "img-rounded"), project %>
                      <% else %>
                          <%=link_to image_tag(project.img_copertina, :size => "400x300", :class => "img-rounded"), project %>
                      <%end%>
                    </div>
                    <div class="span5" id="info">
                      <h4> <% if !project.user.sesso.nil? %>
                            <% if project.user.sesso == "M" %>
                                <%= image_tag("icone/man-user.png", :size => "25x25") %>
                            <% else %>
                                <%= image_tag("icone/woman-user.png", :size => "25x25") %>
                            <% end %>
                        <% else %>
                            <%= image_tag("icone/user.png", :size => "25X25") %>
                        <% end %>
                        <% if signed_in? %>
                            <%= link_to project.user.name, project.user %>
                        <% else %>
                            <%= project.user.name %>
                        <% end %>
                        <%= image_tag("icone/pushpin.png", :size => "25x25") %>

                        <%= project.luogo %>
                      </h4>

                      <div class="row-fluid">
                        <h4>
                          <% if (project.categoria=="ARTE & TEMPO LIBERO") %>
                              <span class="label label-success">ARTE & TEMPO LIBERO</span>
                              <% elsif (project.categoria=="STILE DI VITA & TECNOLOGIA") %>
                                  <span class="label label-warning">STILE DI VITA & TECNOLOGIA</span>
                                  <% elsif (project.categoria=="SOCIAL INNOVATION") %>
                                      <span class="label label-danger">SOCIAL INNOVATION</span>
                                      <% elsif (project.categoria=="EVENTI") %>
                                          <span class="label label-info">EVENTI</span>
                                          <% elsif (project.categoria=="CIBO") %>
                                              <span class="label label-action">CIBO</span>
                          <% end %>
                        </h4>
                      </div>

                      <div class="row-fluid">
                      <div class="span12">
                        <h5>Di cosa si tratta?  </h5>
                        <p><%= project.descrizione %>   </p>
                      </div>
                     </div>
                    </div>



                  </div>


                  <div class="row-fluid" >
                    <div class="span1"></div>
                    <div class="span3">
                      <p style="text-align: right"> Budget attuale: <%= project.budget_attuale %> € <p>
                    </div>
                      <div class="span5">
                      <div class="progress progress-success progress-striped">
                        <div class="bar" style="width: 100%;"></div>
                      </div>
                      </div>
                    <div class="span3">
                      <h5 style="text-align: left">Goal <%= project.goal %> € </h5>
                     </div>
                  </div>
                  <div class="row-fluid">
                    <div class="span7 offset1">
                    <div class="progress progress-danger progress">
                    <div class="bar" style="width: 100%;"></div>
                    </div>
                    </div>
                    <div class="span1">
                      <%= image_tag("icone/clock.png", :size => "25x25") %>
                    </div>
                    <div class="span2"> <h5 style="text-align: left"> Completato! </h5></div>
                  </div>


              </ol>
            </div>
            </div>

        <% end %>
    <% end %>

    </div>
    <a class="carousel-control left" href="#myCarouseltab<%=@projectcat%>" data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#myCarouseltab<%=@projectcat%>" data-slide="next">&rsaquo;</a>
  </div>

</div>
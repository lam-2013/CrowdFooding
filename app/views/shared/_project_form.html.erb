<%= form_for(@project) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="row-fluid" xmlns="http://www.w3.org/1999/html">
      <div class="span12">
        <div class="row-fluid">
          <div class="span6">
            <%= f.label :titolo %>
            <%= f.text_field :titolo %>
            <%= f.label :descrizione %>
            <%= f.text_field :descrizione %>
            <h4>Budget da raggiungere</h4>
            <%= f.text_field :goal %>
            <div class="row-fluid">
              <%= f.label :Categoria %>
              <%= f.select(:categoria, @cat)%>
            </div>
          </div>
          <div class="span6">
            <h4>Media</h4>
            <%= f.label :immagine_progetto %>
            <%= f.text_field :img_copertina %>
            <%= f.label :immagini %>
            <%= f.text_field :images %>
            <%= f.label :video %>
            <%= f.text_field :videos %>
          </div>


        </div>
        <h4>Tags</h4>

        <%= f.text_field :tags, placeholder: 'tag1,tag2,tag3,tag4' %>


        <%= f.label :Cerco_altri_collaboratori %>
        <%= f.text_field :risorse_umane %>

        <%= f.label :'Incentiva_l\'utente piÃ¹ attivo' %>
        <%= f.text_field :gift %>

      </div>
    </div>

    <%= f.hidden_field :data_creazione %>
    <%= f.hidden_field :data_fine %>

    <div class="span5">
      <%= f.submit 'Create Project', class: 'btn btn-primary' %>
    </div>
    </div>
<% end %>
<%= form_for(@project) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="row-fluid">
      <div class="span12">
        <div class="row-fluid">
          <div class="span6">
            <%= f.label :titolo %>
            <%= f.text_field :titolo %>
            <%= f.label :descrizione %>
            <%= f.text_field :descrizione %>
            <%= f.label :Budget_da_raggiungere %>
            <%= f.text_field :goal %>
            <div class="row-fluid">
              <div class="span6">
                <%= f.label :Categoria %>
                <%= select(@project, :categoria, options = { "Prodotti" => "1", "Idee" => "2", "Luoghi" => "3", "Educazione" => "4", "Turismo" => "5"})%>
              </div>
              <div class="span6">
                <%= f.label :Tags %>
                <%= check_box_tag(:tags) %>
                <%= label_tag(:tags, "Prodotti") %>
                <%= check_box_tag(:tags) %>
                <%= label_tag(:tags, "Idee") %>
                <%= check_box_tag(:tags) %>
                <%= label_tag(:tags, "Luoghi") %>
                <%= check_box_tag(:tags) %>
                <%= label_tag(:tags, "Educazione") %>
                <%= check_box_tag(:tags) %>
                <%= label_tag(:tags, "Turismo") %>

              </div>
            </div>
          </div>
          <div class="span6">
            <h4>Media</h4>
            <%= f.label :immagine_progetto %>
            <%= f.text_field :img_copertina %>
            <%= f.label :immagini %>
            <%= f.text_field :images %>
            <%= f.label :video %>
            <%= f.text_field :videos %>
          </div>
        </div>
      </div>
    </div>
<div class="span2">
  <%= f.submit 'Project', class: 'btn btn-primary' %>
</div>
</div>
<% end %>
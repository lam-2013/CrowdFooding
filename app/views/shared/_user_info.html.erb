<% # current user gravatar %>
<a href="<%= user_path(@user) %>">
  <%= gravatar_for @user, size: 100 %>
</a>

<% # current user name, link to her profile and her posts number %>

      <h2><%=@user.name%></h2>
  <% unless @user.cognome.nil? %>
      <h2><%=@user.cognome%></h2>
  <% end %>

<h4><%= pluralize(@user.projects.count, 'project') %></h4>

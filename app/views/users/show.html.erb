              <div class="carousel-inner">
                <% if @user.projects.any? %>
                    <%  @user.projects.each do |project|  %>

                        <!-- Carousel items -->
                        <% if @user.projects.first == project %>
                            <div class="active item <%= project.id %>">
                              <ol class="projects">
                                <h3><%= project.titolo %></h3>
                                <h4><%= project.luogo %></h4>
                                <p><%= project.descrizione %></p>

                                <%= image_tag(project.img_copertina, :size => '500x200')%>

                                <% if current_user?(project.user) %>
                                    | <%= link_to 'show', project%>
                                    |<%= link_to "Edit Project", edit_project_path(project.id)%>
                                    |<%= link_to "Edit/Add Contributions", contributions_path(project_id: project.id)%>
                                <% end %>

                              </ol>
                            </div>
                        <% else %>
                            <div class="item <%= project.id %>">
